	background-image: url('train.png')
	background-repeat: no-repeat
	background-size: auto 75px

.tram
	height: 80px
	background-image: url('tram.png')
	background-repeat: no-repeat
	background-size: auto 75px

.bus
	height: 80px
	background-image: url('bus.png')
	background-repeat: no-repeat
